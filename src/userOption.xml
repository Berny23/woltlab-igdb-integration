<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/5.4/userOption.xsd">
	<import>
		<options>
			<option name="igdb_integration_game_count">
				<categoryname>profile.personal</categoryname>
				<optiontype>integer</optiontype>
				<visible>15</visible>
				<editable>2</editable>
			</option>
			<option name="igdb_integration_games_per_page">
				<categoryname>settings.general.appearance</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>0</defaultvalue>
				<minvalue>0</minvalue>
				<maxvalue>10000</maxvalue>
				<visible>3</visible>
				<editable>3</editable>
			</option>
			<option name="igdb_integration_default_game_sort_field">
				<categoryname>settings.general.appearance</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>0</defaultvalue>
				<selectoptions>
					0:wcf.global.defaultValue
					1:wcf.igdb_integration.game.name
					2:wcf.igdb_integration.game.year
					3:wcf.igdb_integration.game.players
					4:wcf.form.field.rating
				</selectoptions>
				<visible>3</visible>
				<editable>3</editable>
			</option>
			<option name="igdb_integration_default_game_sort_order">
				<categoryname>settings.general.appearance</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>0</defaultvalue>
				<selectoptions>
					0:wcf.global.defaultValue
					1:wcf.global.sortOrder.ascending
					2:wcf.global.sortOrder.descending
				</selectoptions>
				<visible>3</visible>
				<editable>3</editable>
			</option>
			<option name="igdb_integration_player_toplist_limit">
				<categoryname>settings.general.appearance</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>0</defaultvalue>
				<minvalue>0</minvalue>
				<maxvalue>500</maxvalue>
				<visible>3</visible>
				<editable>3</editable>
			</option>
		</options>
	</import>
</data>